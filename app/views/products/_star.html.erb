<%# 產生星星 %>
<div class="rating rating-<%= size %> flex items-center">
  <% if average_rating == 0  %>
    <% 5.times do |i|%>
      <input type="radio" class="pointer-events-none comment-star bg-slate-300"/>
    <% end %>
  <% else %>
    <% 5.times do |i|%>
      <input type="radio" class="pointer-events-none comment-star bg-rose-600 checked:bg-rose-500" <%= "checked" if  i+1 == average_rating%>/>
    <% end %>
  <% end %>
</div>
