<header class="flex justify-center w-full">
  <section class="m-2 logo">
    <img src="https://fakeimg.pl/162x40/ff0000,128/000,255" class=''>
  </section>
  <div class="m-2">
    <%= form_with url: search_path, method: 'get' do |form|%>
      <%= form.text_field :keyword %>
      <%= form.submit "Search" , name: ''%>
    <% end %>
  </div>
  <div class="m-2">
    <%= link_to '購物車', new_cart_path, class: "py-1 btn btn-primary" %>
  </div>
</header>
<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

<%# banner %>
<div class="w-11/12 mx-auto carousel">
  <div id="item1" class="w-full carousel-item">
    <img src="https://picsum.photos/1000/200/?random=1" class="w-full" />
  </div> 
  <div id="item2" class="w-full carousel-item">
    <img src="https://picsum.photos/1000/200/?random=2" class="w-full" />
  </div> 
  <div id="item3" class="w-full carousel-item">
    <img src="https://picsum.photos/1000/200/?random=3" class="w-full" />
  </div> 
  <div id="item4" class="w-full carousel-item">
    <img src="https://picsum.photos/1000/200/?random=4" class="w-full" />
  </div>
</div> 
<div class="flex justify-center w-full gap-2 py-2">
  <a href="#item1" class="btn btn-xs">1</a> 
  <a href="#item2" class="btn btn-xs">2</a> 
  <a href="#item3" class="btn btn-xs">3</a> 
  <a href="#item4" class="btn btn-xs">4</a>
</div>

  <%= render 'shared/flash' if flash.any? %>
  <div class="flex justify-between w-11/12 mx-auto">
    <h1 class="self-end mb-1 text-xl font-bold text-indigo-600">商品列表</h1>
    <%= link_to '新增商品', new_product_path, class: "self-end mb-2 py-1 btn btn-primary" %>
  </div>

  <div class="grid w-11/12 gap-2 mx-auto sm:grid-cols-4 xl:grid-cols-6 md:grid-cols-5">
    <%= render  @products %>
  </div>
</div>

