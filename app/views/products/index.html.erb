<header class="flex justify-between w-full h-16 px-12 bg-indigo-600">
  <section class="mt-1 mb-3 link link-hover">
    <img src="https://picsum.photos/id/118/144/48/">
  </section>
  <div class="self-center mt-1 mb-2 mr-16">
    <%= form_with url: search_path, class: "flex", method: 'get' do |form|%>
      <%= form.text_field :keyword, class: "w-96 rounded-lg" %>
      <%= button_tag type: 'submit', class: "ml-2 fill-gray-200" do %>
        <%= raw('<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 48 48" id="search"><path d="M46.599 40.236L36.054 29.691C37.89 26.718 39 23.25 39 19.5 39 8.73 30.27 0 19.5 0S0 8.73 0 19.5 8.73 39 19.5 39c3.75 0 7.218-1.11 10.188-2.943l10.548 10.545a4.501 4.501 0 0 0 6.363-6.366zM19.5 33C12.045 33 6 26.955 6 19.5S12.045 6 19.5 6 33 12.045 33 19.5 26.955 33 19.5 33z"></path></svg>') %>
      <% end %>
    <% end %>
  </div>
  <%= link_to(raw('<svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" class="mt-3 mr-3"><path d="M21.5,15a3,3,0,0,0-1.9-2.78l1.87-7a1,1,0,0,0-.18-.87A1,1,0,0,0,20.5,4H6.8L6.47,2.74A1,1,0,0,0,5.5,2h-2V4H4.73l2.48,9.26a1,1,0,0,0,1,.74H18.5a1,1,0,0,1,0,2H5.5a1,1,0,0,0,0,2H6.68a3,3,0,1,0,5.64,0h2.36a3,3,0,1,0,5.82,1,2.94,2.94,0,0,0-.4-1.47A3,3,0,0,0,21.5,15Zm-3.91-3H9L7.34,6H19.2ZM9.5,20a1,1,0,1,1,1-1A1,1,0,0,1,9.5,20Zm8,0a1,1,0,1,1,1-1A1,1,0,0,1,17.5,20Z"></path></svg>'), new_cart_path, class: "fill-gray-200 mt-1") %>
</header>

