<div class="flex w-full">
  <div class="flex flex-col w-1/3 pr-2">
    <%= sale_info.label :spec, '規格', class: "text-center " %>
    <%= sale_info.text_field :spec, class: "shadow rounded-md border border-gray-200 pl-2" %>
  </div>
  <div class="flex flex-col w-1/3 pr-2">
    <%= sale_info.label :price, '價格', class: "text-center " %>
    <%= sale_info.number_field :price, class: "shadow rounded-md border border-gray-200 pl-2" %>
  </div>
  <div class="flex flex-col w-1/3 ">
    <%= sale_info.label :storage, '商品庫存', class: "text-center " %>
    <%= sale_info.number_field :storage, class: "shadow rounded-md border border-gray-200" %>
  </div>
</div>      