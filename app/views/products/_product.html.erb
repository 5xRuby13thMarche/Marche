<%= link_to product_path(product) do %>
  <section class="border-b border-gray-200 rounded-sm shadow-md">
    <header class= "mb-2">
      <div>
        <%= image(product) %>
      </div>
    </header>
    <section class= "flex flex-col justify-between h-24 px-2">
      <h2 class= "flex-1 text-sm line-clamp-2"><%= product.name %></h2>
      <div class="flex flex-col justify-between m-2 md:flex-row">
        <div class="text-sm font-semibold text-marche_orange">$<%= product.sale_infos.first.price %></div>
        <%= render partial: 'star', locals:{ size: "xs", average_rating: product.average_rating} %>
      </div>
    </section>
  </section>
<% end %>
