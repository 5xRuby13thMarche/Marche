<section class="mb-4 border rounded">
  <%# 平均星星區塊 %>
  <div class="flex flex-col justify-center m-3 text-center w-fit">
    <p class="text-xl"><span class="text-4xl"><%= average_rating %></span>/5</p>
    <%# 產生星星 %>
    <div class="rating rating-md">
      <% 5.times do |i|%>
        <input type="radio" class="pointer-events-none comment-star bg-rose-600 checked:bg-rose-500" <%= "checked" if  i+1 == average_rating%>/>
      <% end %>
    </div>
  </div>
</section>
