<%= turbo_frame_tag(@product_comment) do%>
  <%= form_with model: @product_comment , url: comment_path(params[:id]), method: 'patch' do |f| %>
    <div class="flex">
      <%= f.label "修改評論：", class: 'label'%>
      <div class="rating rating-md">
        <%= f.radio_button :rating, 0, class: "comment-star-hidden" , checked: "checked" %>
        <%= f.radio_button :rating, 1, class: "comment-star" %>
        <%= f.radio_button :rating, 2, class: "comment-star" %>
        <%= f.radio_button :rating, 3, class: "comment-star" %>
        <%= f.radio_button :rating, 4, class: "comment-star" %>
        <%= f.radio_button :rating, 5, class: "comment-star"%>
      </div>
    </div>
    <%= f.text_area :content, class: "comment-textarea  w-full"%>
    <%= link_to "取消", :back, class: "comment-btn-sm" %>
    <%= f.submit "完成", class: "comment-btn-sm" %>
  <% end %>
<% end %>
