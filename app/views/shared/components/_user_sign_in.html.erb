<div class="block w-6 pt-1 dropdown dropdown-end">
  <label tabindex="0" class="btn-xs btn-ghost btn-circle avatar btn">
    <div class="items-center w-6 rounded-full">
      <%= avatar(current_user, size: [100, 100]) %>
    </div>
  </label>
  <ul tabindex="0" class="p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-60">
    <% if user_signed_in? %>
      <li class="py-1 pl-4 text-marche_orange text-md"><%= current_user.email %></li>
      <li>
        <%= link_to "我的帳戶", edit_user_registration_path, class: "active:bg-marche_orange" %>
        <%= link_to "我的訂單", orders_path, class: "active:bg-marche_orange" %>
        <%= link_to "我的收藏", show_like_path, class: "active:bg-marche_orange" %>
        <%= link_to "登出", destroy_user_session_path, data: { turbo_method: :delete,  confirm: '是否確定登出'}, class: "active:bg-marche_orange" %>
      </li>
    <% else %>
      <li class="py-1 pl-4 text-marche_orange text-md">您現在為訪客</li>
      <li>
        <%= link_to "註冊", new_user_registration_path, class: "active:bg-marche_orange" %>
        <%= link_to "登入", new_user_session_path, class: "active:bg-marche_orange" %>
      </li>
    <% end %>
  </ul>
</div>