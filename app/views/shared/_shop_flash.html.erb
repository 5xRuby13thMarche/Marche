<% if flash[:notice] %>
<div class="absolute left-0 right-0 flex justify-center ">
  <p class="inline-block px-3 py-2 mt-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= flash[:notice] %></p>
</div>
<% elsif flash[:alert]%>
<div class="absolute left-0 right-0 flex justify-center">
  <p class="inline-block px-3 py-2 mt-5 font-medium text-red-500 rounded-lg bg-red-50" id="notice"><%= flash[:alert] %></p>
</div>
<% end %>

