<% if flash[:notice] %>
  <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= flash[:notice] %></p>
<% elsif flash[:alert]%>
  <p class="inline-block px-3 py-2 mb-5 font-medium text-red-500 rounded-lg bg-red-50" id="notice"><%= flash[:alert] %></p>
<% end %>
