<%= render 'shared/shop_flash' if flash.any? %>
<div class="relative flex flex-col h-full min-h-screen pb-20 bg-sky-100">
  <%= render 'shared/shop_sidebar' %>
  <div class="w-9/12 mt-24 ml-auto">
    <div class="flex w-5/6 border-red-500 shadow stats">
      <div class="stat">
        <div class="stat-figure text-secondary">
        <%= link_to shops_path(chart: 'total_price') do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 rounded-full stroke-current hover:bg-rose-300"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        <% end %>
        </div>
        <div class="stat-title">累積銷售金額</div>
        <div class="stat-value">$ <%= @total_price.to_i %></div>
        <div class="stat-desc"><%= format_date(@shop.created_at)%> - <%= format_date(Date.today)%></div>
      </div>
      
      <div class="stat">
        <div class="stat-figure text-secondary">
        <%= link_to shops_path(chart: 'top_products') do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 rounded-full stroke-current hover:bg-rose-300"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path></svg>
        <% end %>
        </div>
        <div class="stat-title">賣出商品總量</div>
        <div class="stat-value"><%= @total_quantity %></div>
      </div>
      
      <div class="stat">
        <div class="stat-figure text-secondary">
        <%= link_to shops_path(chart: 'total_order') do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 rounded-full stroke-current hover:bg-rose-300"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path></svg>
        <% end %>
        </div>
        <div class="stat-title">已出貨次數</div>
        <div class="stat-value"><%= @shipped_product.count %></div>
      </div>
    </div>
    <% if params[:chart] == 'total_price' %>
      <div class="pl-4 my-4 ml-2 text-xl font-bold border-l-2 text-sky-800 border-sky-800">每日成交總額</div>
      <div class="w-5/6 p-4 border-red-500 shadow stats">
        <%= column_chart @chart, prefix: "$", empty: "No data"%>
      </div>
    <% elsif params[:chart] == 'total_order' %>
      <div class="pl-4 my-4 ml-2 text-xl font-bold border-l-2 text-sky-800 border-sky-800">每日成交訂單</div>
      <div class="w-5/6 p-4 border-red-500 shadow stats">
        <%= column_chart @chart, empty: "No data" %>
      </div>
    <% elsif params[:chart] == 'top_products' %>
      <div class="pl-4 my-4 ml-2 text-xl font-bold border-l-2 text-sky-800 border-sky-800">熱銷商品</div>
      <div class="w-5/6 p-4 border-red-500 shadow stats">
        <%= bar_chart @chart, empty: "No data" %>
      </div>
    <% end %>
  </div>
</div>