<div class="relative flex">
  <%= render 'shared/shop_sidebar'%>
  <div class="w-5/6 mt-[84px] ml-auto h-full bg-sky-100">
      <h1 class="self-end w-5/6 pl-3 mx-auto mt-5 text-3xl font-bold text-sky-800">賣場簡介</h1>
    <section class="w-5/6 mx-auto mt-3 mb-16 bg-white rounded-md shadow-xl">
      <div class="w-full px-6 py-3 mx-auto">
        <h2 class="w-full text-xl font-bold text-marche_shop_black">基本資料</h2>
        <div class="w-full mx-auto" data-controller="user--avatar">
          <%= form_with(model:@shop) do |form|%>
            <div class="flex flex-col items-center justify-center my-5">
              <img src="" alt="" class="hidden object-cover w-full my-2 rounded aspect-1" data-user--avatar-target="preview">
              <div class="m-2 rounded-full bg-slate-300 w-fit "><%= logo(@shop, size: [400, 400]) %></div>
            </div>
            <div class="flex items-center justify-start my-5">
              <%= form.label :name ,'賣場名稱', class:"w-1/6 text-marche_shop_black"%>
              <%= form.text_field :name, placeholder:"輸入您的賣場名稱", class: "block rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-2/3" %>
            </div>
            <div class="flex items-center justify-start my-5">
              <%= form.label :logo, '賣場LOGO', class: "w-1/6 text-marche_shop_black" %><br/>
              <%= form.file_field :logo, class: "block rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-2/3", data: { user__avatar_target: "input" } %>
            </div>
            <div class="flex items-center justify-start w-full my-5">
              <%= form.label :description ,'賣場介紹', class:"w-1/6 text-marche_shop_black"%>
              <%= form.text_area :description, placeholder:"輸入您的賣場資訊與敘述", class: "block rounded-md border border-gray-200 outline-none px-3 pt-2 pb-28 mt-2 mb-3 w-2/3" %>
            </div>
            <div class="flex items-center justify-center mb-5">
              <%= form.submit "儲存", class: "text-marche_shop_white bg-sky-600 border-sky-600 text-base btn"%>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>