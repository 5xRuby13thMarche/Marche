<div class="container flex flex-col w-full mx-auto sm:w-10/12 sm:flex-row sm:items-start">
  <div class="w-full mx-auto mt-1 sm:w-44 sm:flex-row">
    <div class="flex justify-between mx-1 mt-4 mb-4 sm:mx-2 sm:flex-col">
      <div class="flex items-center px-2 py-2 text-center text-gray-400 border border-white rounded hover:border-gray-200 hover:bg-gray-200">
        <img width="30" height="30" src="https://img.icons8.com/ios-glyphs/30/user--v1.png" alt="user--v1"/>
        <%= link_to '我的帳戶', profile_users_path %>
      </div>
      <div class="flex items-center px-2 py-2 text-center text-gray-400 border border-white rounded hover:cursor-pointer hover:border-gray-200 hover:bg-gray-200">
        <img width="30" height="30" src="https://img.icons8.com/windows/32/ingredients-list.png" alt="ingredients-list"/>
        <%= link_to '我的訂單', orders_path %>
      </div>
      <div class="flex items-center px-2 py-2 text-center cursor-not-allowed text-marche_orange">
        <img width="30" height="30" src="https://img.icons8.com/windows/32/hearts.png" alt="hearts"/>
        <p>我的收藏</p>
      </div>
    </div>
  </div>
  <div class="w-full mx-auto mt-1 sm:w-10/12">
    <h1 class="mt-2 mb-4 ml-3 text-2xl font-bold sm:mt-7 sm:ml-0 text-marche_orange">我的收藏</h1>
    <% if @products.present? %>
      <div class="grid w-full grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-5 md:grid-cols-4 xl:grid-cols-6">
        <%= render partial:'products/product', collection: @products %>
      </div>
      <div class="flex justify-center my-4 mb-16"><%== pagy_nav(@pagy) if @pagy.pages > 1 %></div>
    <% else %>
      <div class="flex flex-col items-center justify-center my-8">
        <p class="mb-4 text-center text-gray-500">您目前沒有收藏商品</p>
        <%= link_to '去 Marche 市集逛逛', root_path, class: "px-4 py-2 text-sm font-bold border-orange-200 rounded text-marche_white bg-marche_orange hover:bg-marche_orange100 hover:text-black-100 hover:cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>