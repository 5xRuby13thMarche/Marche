<div class="mt-2 mb-4 border-2 border-grey">

  <div class="flex justify-center bg-gray-100 border-b-2">
    <h1 class="m-2 text-xl">訂單資訊</h1>
  </div>

  <div class="flex justify-around px-3 pt-2">
    <p class="w-1/2 text-xl text-center text-red-600">總金額</p> 
    <p class="w-1/2 text-xl text-center text-red-600"><%= number_with_delimiter(order.total_price.floor, delimiter: ',') %></p>
  </div>

  <div class="flex justify-around px-3 pt-2">
    <p class="w-1/2 text-lg text-center">訂單編號</p>
    <p class="w-1/2 text-lg text-center break-words"><%= order.tracking_number %></p>
  </div>
  
  <div class="flex justify-around px-3 pt-2">
    <p class="w-1/2 text-lg text-center">付款狀態</p>
    <p class="w-1/2 text-lg text-center"><%= order.payment_status %></p>
  </div>
  
  <div class="flex justify-around px-3 pt-2">
    <p class="w-1/2 text-lg text-center">付款方式</p>
    <p class="w-1/2 text-lg text-center"><%= order.payment_method %></p> <!-- 信用卡付費？-->
  </div>

  <!-- 分隔線 -->
  <div class="flex justify-center m-3">
    <div class="w-4/5 border-b"></div>
  </div>
    
  <div class="flex justify-around px-3 pt-2">
    <p class="w-1/2 text-lg text-center">出貨狀態</p>
    <p class="w-1/2 text-lg text-center"><%= order.shipping_status %>
  </div>

  <div class="flex justify-around px-3 pt-2">
    <p class="w-1/2 text-lg text-center">配送地址</p>
    <p class="w-1/2 text-lg text-center"><%= order.shipping_address %>
  </div>

  <div class="flex justify-around px-3 pt-2">
    <p class="w-1/2 text-lg text-center">收件人</p>
    <p class="w-1/2 text-lg text-center"><%= order.receiver %>
  </div>


  <div class="flex justify-around px-3 pt-2 mb-2">
    <p class="w-1/2 text-lg text-center">備註</p>
    <p class="w-1/2 text-lg text-center"><%= order.note %>
  </div>
</div>        